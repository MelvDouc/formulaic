{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "$src/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules"
  ]
}